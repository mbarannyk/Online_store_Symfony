{% extends 'actions.html.twig' %}


{% block title %}
    <title>Display product</title>
{% endblock %}

{% block table %}
<div class="height d-flex  p-5 pt-6 justify-content-center align-items-center">
    
    <div class="card p-5 pt-6 border border-3 border-warning w-25">
        
        <div class="d-flex justify-content-between align-items-center">
            <div class="mt-2">
                <h6 class="text-uppercase">{{ product.category.name }}</h6>
                <div class="mt-5">
                    <h2 class="text-uppercase mb-0">{{ product.name }}</h2>
                    <h3 class="main-heading mt-0"> Ціна: {{ product.price }} грн</h3>
                    <div class="d-flex flex-row user-ratings">
                        <div class="ratings">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="image border border-3">
                <img src="{{ product.image }}" alt="фото товару" width="150">
            </div>
        </div>
        
        <div class="d-flex justify-content-between align-items-center mt-2 mb-2">
            <span>Опис продукту:</span>
        </div>
        
        
        <p>{{ product.description }}</p>
        
        <a button class="btn btn-success" type="button" href="#">Додати в кошик</a> 
        <a button class="btn btn-outline-success" type="button" href="/main/products">Повернутися до товарів</a> 
    </div>
    
</div>

{% endblock %}